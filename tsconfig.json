{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./",
    "paths": {
      "@/api/*": [
        "src/pages/api/*"
      ],
      "@/assets/*": [
        "src/assets/*"
      ],
      "@/database/*": [
        "src/database/*"
      ],
      "@/lib/*": [
        "src/lib/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/apps/*": [
        "src/apps/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/types": [
        "src/types/index.ts"
      ],
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true, // allow import React from 'react';
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "sourceMap": true,
    "preserveConstEnums": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "src/global.d.ts",
    "src/lib/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "__tests__"
  ],
}